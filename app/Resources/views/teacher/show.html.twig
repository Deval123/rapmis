{% extends 'base.html.twig' %}

{% block body %}
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Dashboard</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="{{ path('homepage') }}">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Dashboard</li>
                </ol>
            </div>
        </div>
    <h1>Teacher</h1>

    <table>
        <tbody>
            <tr>
                <th></th>
                <td><img src="{{ asset('uploads/prof/' ~ teacher.filename) }}" alt="" width="250"></td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ teacher.name }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ teacher.prenom }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ teacher.tel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ teacher.email }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ teacher.sexe }}</td>
            </tr>
            <tr>
                <th>Anneenais</th>
                <td>{% if teacher.anneeNais %}{{ teacher.anneeNais|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datecreate</th>
                <td>{% if teacher.dateCreate %}{{ teacher.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ teacher.filename }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('teacher_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('teacher_edit', { 'id': teacher.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
</div>
{% endblock %}
